Bootstrap: docker
From: ubuntu:16.04

%runscript
    echo "CNVnator exists here"
    
%environment
    LC_ALL=C.UTF-8 
    SHELL:=/bin/bash
    
%post  
    echo "Hello from inside the container"
    apt-get update
    apt-get -y install wget git bzip2 build-essential gcc zlib1g-dev language-pack-en-base apt-transport-https make cmake unzip libbz2-dev libncurses5-dev libncursesw5-dev libreadline-dev liblzma-dev libcurl4-gnutls-dev libssl-dev autoconf automake  perl  
    update-locale LC_ALL=en_US.UTF-8 LANG=en_US.UTF-8   

    cd /bin && wget https://root.cern/download/root_v6.22.08.Linux-ubuntu16-x86_64-gcc5.4.tar.gz
    cd /bin && tar -xvf root_v6.22.08.Linux-ubuntu16-x86_64-gcc5.4.tar.gz

    export ROOTSYS=/bin/root
    export PATH=$PATH:$ROOTSYS/bin
    export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:$ROOTSYS/lib
    
    
    #export SHLIB_PATH=$SHLIB_PATH:$ROOTSYS/lib
  
    #install samtools
    cd /bin/ && wget https://github.com/samtools/samtools/releases/download/1.11/samtools-1.11.tar.bz2
    tar -xvf samtools-1.11.tar.bz2
    cd /bin/samtools-1.11
    ./configure
    make
    make install
    make all all-htslib
    make install install-htslib
    
    #install CNVnator
    cd /bin/ && wget https://github.com/abyzovlab/CNVnator/releases/download/v0.3.3/CNVnator_v0.3.3.zip
    cd /bin/ && unzip CNVnator_v0.3.3.zip
    cd /bin/CNVnator_v0.3.3/src/samtools && make
    cd /bin/CNVnator_v0.3.3/src && make 
    
    #ln -s /bin/samtools-1.11 samtools
    #LIBS=-ldl make
    #make OMP=no
    
   
    #ln -s /bin/CNVnator_v0.4.1/src/cnvnator 
    #ln -s /bin/CNVnator_v0.4.1/src/plotcircular.py
    #ln -s /bin/CNVnator_v0.4.1/src/plotrdbaf.py
    #ln -s /bin/CNVnator_v0.4.1/src/plotbaf.py
    #ln -s /bin/CNVnator_v0.4.1/src/pytools
